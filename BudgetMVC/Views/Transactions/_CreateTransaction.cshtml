@model TransactionsViewModel

<div class="card form-container form-card mb-5">
    <div class="card-header">
        Add New Transaction
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="NewTransaction.CategoryId" class="form-label">Category</label>
                    <select asp-for="NewTransaction.CategoryId" asp-items="@Model.Categories" class="form-select">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="NewTransaction.CategoryId" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="NewTransaction.Amount" class="form-label">Amount</label>
                    <input asp-for="NewTransaction.Amount" class="form-control" />
                    <span asp-validation-for="NewTransaction.Amount" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Currency</label>
                    <select asp-for="SelectedCurrency" asp-items="@Model.Currencies" class="form-select"></select>
                </div>
                <div class="col-12">
                    <label asp-for="NewTransaction.Description" class="form-label">Description</label>
                    <input asp-for="NewTransaction.Description" class="form-control" placeholder="Enter a brief description of the transaction..." />
                    <span asp-validation-for="NewTransaction.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="mt-3 text-center">
                <button type="submit" class="btn btn-gradient px-4">Add Transaction</button>
            </div>
            @Html.AntiForgeryToken()
        </form>
    </div>
</div>
